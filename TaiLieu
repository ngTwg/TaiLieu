// --- COMPONENTS HỖ TRỢ ANIMATION ---
const RevealOnScroll = ({ children, delay = 0 }) => {
  const [isVisible, setIsVisible] = useState(false);
  const ref = useRef(null);

  useEffect(() => {
    const observer = new IntersectionObserver(
      ([entry]) => {
        if (entry.isIntersecting) {
          setIsVisible(true);
          observer.unobserve(entry.target);
        }
      },
      { threshold: 0.1 }
    );
    if (ref.current) observer.observe(ref.current);
    return () => {
      if (ref.current) observer.unobserve(ref.current);
    };
  }, []);

  return (
    <div 
      ref={ref} 
      className={`transition-all duration-1000 transform ${isVisible ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-20'}`}
      style={{ transitionDelay: `${delay}ms` }}
    >
      {children}
    </div>
  );
};

const ReviewCard = ({ review }) => (
  <div className="bg-[#0F1623]/80 backdrop-blur-sm p-6 rounded-2xl border border-gray-800 relative hover:border-cyan-500/30 transition-all duration-300 w-[300px] md:w-[350px] shrink-0 mx-4 hover:shadow-[0_0_20px_rgba(6,182,212,0.15)] hover:-translate-y-2">
    <div className="flex justify-between items-start mb-3">
       <div className="text-yellow-400 flex">
        {[...Array(5)].map((_, i) => (
          <Star 
            key={i} 
            className={`${i < (parseInt(review.rating) || 5) ? 'fill-current' : 'text-gray-600'} transition-all duration-300`} 
            size={16} 
          />
        ))}
      </div>
      <span className="text-[10px] uppercase font-bold px-2 py-1 rounded bg-gradient-to-r from-cyan-900/50 to-blue-900/50 text-cyan-300 border border-cyan-500/30 shadow-[0_0_10px_rgba(34,211,238,0.2)]">
          {review.type || "Thành viên"}
      </span>
    </div>
    
    <p className="text-gray-300 italic mb-4 text-sm line-clamp-3 min-h-[60px]">"{review.content}"</p>
    
    <div className="flex items-center gap-3 pt-2 border-t border-gray-800/50">
      <div className="w-10 h-10 rounded-full bg-gradient-to-tr from-cyan-600 to-blue-700 flex items-center justify-center text-white font-bold shrink-0 shadow-lg ring-2 ring-cyan-500/20">
        {review.name ? review.name.charAt(0).toUpperCase() : "?"}
      </div>
      <div>
        <h4 className="text-white font-bold text-sm truncate max-w-[150px]">{review.name}</h4>
        <p className="text-cyan-500 text-xs font-medium flex items-center gap-1">
          <CheckCircle size={10} />
          {review.type || "Đã mua hàng"}
        </p>
      </div>
    </div>
  </div>
);

export default function GalaxyShop() {
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [formData, setFormData] = useState({ 
      name: '', 
      email: '', 
      message: '',
      rating: 5,
      type: 'Mua khóa học'
  });
  const [submitStatus, setSubmitStatus] = useState(null);
  const [reviews, setReviews] = useState(DEFAULT_REVIEWS);
  const [isLoadingReviews, setIsLoadingReviews] = useState(false);
  const [stars, setStars] = useState([]);
  const [shootingStars, setShootingStars] = useState([]);

  // Tạo sao nền lấp lánh
  useEffect(() => {
    const generateStars = () => {
      const newStars = [];
      for (let i = 0; i < 50; i++) {
        newStars.push({
          id: i,
          left: Math.random() * 100,
          top: Math.random() * 100,
          size: Math.random() * 3 + 1,
          duration: Math.random() * 3 + 2,
          delay: Math.random() * 2
        });
      }
      setStars(newStars);
    };
    generateStars();
  }, []);

  // Tạo sao băng (Shooting Stars)
  useEffect(() => {
    const generateShootingStars = () => {
      const newShootingStars = [];
      for (let i = 0; i < 6; i++) { // Số lượng sao băng
        newShootingStars.push({
          id: i,
          top: Math.random() * 50, // Chỉ xuất hiện ở nửa trên màn hình
          left: Math.random() * 100,
          delay: Math.random() * 10, // Độ trễ ngẫu nhiên
          duration: Math.random() * 2 + 3 // Tốc độ
        });
      }
      setShootingStars(newShootingStars);
    };
    generateShootingStars();
  }, []);

  const fetchReviews = async () => {
    if (!SCRIPT_URL) return;
    try {
        const response = await fetch(SCRIPT_URL);
        const data = await response.json();
        if (Array.isArray(data) && data.length > 0) {
            setReviews(data);
        } else if (Array.isArray(data) && data.length === 0) {
            setReviews([]); 
        }
    } catch (err) {
        console.error("Lỗi đọc dữ liệu:", err);
    } finally {
        setIsLoadingReviews(false);
    }
  };

  useEffect(() => {
    setIsLoadingReviews(true);
    fetchReviews();
    const interval = setInterval(fetchReviews, 30000); 
    return () => clearInterval(interval);
  }, []);

  const handleScroll = (id) => {
    const element = document.getElementById(id);
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' });
      setIsMenuOpen(false);
    }
  };

  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  const handleRatingChange = (star) => {
    setFormData(prev => ({ ...prev, rating: star }));
  };

  const handleTypeChange = (type) => {
    setFormData(prev => ({ ...prev, type: type }));
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setSubmitStatus('sending');

    try {
      await fetch(SCRIPT_URL, {
        method: 'POST',
        mode: 'no-cors', 
        headers: { 'Content-Type': 'text/plain;charset=utf-8' },
        body: JSON.stringify(formData)
      });

      setSubmitStatus('success');
      setTimeout(() => {
          fetchReviews();
          setSubmitStatus(null);
          setFormData({ name: '', email: '', message: '', rating: 5, type: 'Mua khóa học' });
      }, 2000);

    } catch (error) {
      console.error("Lỗi gửi form:", error);
      alert("Lỗi kết nối mạng.");
      setSubmitStatus(null);
    }
  };

  const half = Math.ceil(reviews.length / 2);
  const firstRow = reviews.slice(0, half);
  const secondRow = reviews.slice(half);
  
  const renderMarqueeRow = (items, direction = 'left', speed = 40) => {
     if (items.length === 0) return null;
     let displayItems = [...items];
     while (displayItems.length < 6) {
        displayItems = [...displayItems, ...items];
     }
     return (
       <div className="relative flex overflow-hidden group py-4">
         <div 
            className="flex animate-marquee hover:[animation-play-state:paused]"
            style={{ 
                animationDirection: direction === 'right' ? 'reverse' : 'normal',
                animationDuration: `${speed}s` 
            }}
         >
           {[...displayItems, ...displayItems].map((review, idx) => (
             <ReviewCard key={`${idx}-marquee`} review={review} />
           ))}
         </div>
       </div>
     );
  };

  return (
    <div className="min-h-screen bg-[#050B14] text-gray-100 font-sans selection:bg-cyan-500 selection:text-white overflow-x-hidden relative">
      
      {/* Background Layer */}
      <div className="fixed inset-0 z-0 pointer-events-none overflow-hidden">
        {/* Twinkling Stars */}
        {stars.map((star) => (
          <div
            key={`star-${star.id}`}
            className="absolute bg-white rounded-full opacity-70 animate-pulse"
            style={{
              left: `${star.left}%`,
              top: `${star.top}%`,
              width: `${star.size}px`,
              height: `${star.size}px`,
              animationDuration: `${star.duration}s`,
              animationDelay: `${star.delay}s`
            }}
          />
        ))}
        
        {/* Shooting Stars */}
        <div className="star-shooting">
          {shootingStars.map((star) => (
            <span
              key={`shooting-${star.id}`}
              style={{
                top: `${star.top}%`,
                left: `${star.left}%`,
                animationDelay: `${star.delay}s`,
                animationDuration: `${star.duration}s`
              }}
            />
          ))}
        </div>

        {/* Galaxy Gradient */}
        <div className="absolute inset-0 bg-gradient-to-b from-transparent via-[#0f172a]/20 to-[#050B14]" />
        <div className="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_50%_0%,rgba(14,165,233,0.15),transparent_50%)]" />
      </div>

      <nav className="fixed top-0 left-0 right-0 z-50 bg-[#050B14]/80 backdrop-blur-md border-b border-cyan-900/30 transition-all duration-300">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex items-center justify-between h-16">
            <div className="flex items-center cursor-pointer group" onClick={() => handleScroll('home')}>
              <div className="w-8 h-8 rounded-full bg-gradient-to-tr from-cyan-400 to-blue-600 flex items-center justify-center mr-2 shadow-[0_0_15px_rgba(34,211,238,0.5)] group-hover:shadow-[0_0_25px_rgba(34,211,238,0.8)] transition-all duration-500">
                <Star size={16} className="text-white fill-current group-hover:rotate-180 transition-transform duration-700" />
              </div>
              <span className="font-bold text-xl tracking-wider text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500 uppercase group-hover:from-blue-400 group-hover:to-cyan-500 transition-all duration-500">
                AstroMind
              </span>
            </div>
            
            <div className="hidden md:block">
              <div className="ml-10 flex items-baseline space-x-8">
                {['Khóa học', 'Ứng dụng', 'Feedback', 'Liên hệ'].map((item) => (
                  <button
                    key={item}
                    onClick={() => handleScroll(item.toLowerCase().replace(' ', '-').replace('á', 'a').replace('à', 'a').replace('ứ', 'u').replace('ụ', 'u'))}
                    className="relative text-gray-300 hover:text-cyan-400 transition-colors duration-300 px-3 py-2 rounded-md text-sm font-medium uppercase tracking-wide group"
                  >
                    {item}
                    <span className="absolute bottom-0 left-0 w-0 h-0.5 bg-cyan-400 transition-all duration-300 group-hover:w-full"></span>
                  </button>
                ))}
              </div>
            </div>

            <div className="md:hidden">
              <button onClick={() => setIsMenuOpen(!isMenuOpen)} className="text-cyan-400 hover:text-white p-2">
                {isMenuOpen ? <X size={24} /> : <Menu size={24} />}
              </button>
            </div>
          </div>
        </div>

        {isMenuOpen && (
          <div className="md:hidden bg-[#0A1220] border-b border-cyan-900/50 animate-fade-in-down">
            <div className="px-2 pt-2 pb-3 space-y-1 sm:px-3">
               {['Khóa học', 'Ứng dụng', 'Feedback', 'Liên hệ'].map((item) => (
                  <button
                    key={item}
                    onClick={() => {
                        handleScroll(item.toLowerCase().replace(' ', '-').replace('á', 'a').replace('à', 'a').replace('ứ', 'u').replace('ụ', 'u'));
                        setIsMenuOpen(false);
                    }}
                    className="text-gray-300 hover:text-cyan-400 block px-3 py-2 rounded-md text-base font-medium w-full text-left"
                  >
                    {item}
                  </button>
                ))}
            </div>
          </div>
        )}
      </nav>

      {/* Hero Section */}
      <section id="home" className="relative z-10 pt-32 pb-20 lg:pt-48 lg:pb-32 flex items-center justify-center text-center px-4">
        <RevealOnScroll>
          <div className="max-w-4xl mx-auto">
            <h1 className="text-5xl md:text-7xl font-extrabold tracking-tight mb-6 animate-float">
              <span className="block text-white mb-2">Khai Phá</span>
              <span className="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 animate-gradient-x">
                Tri Thức Vũ Trụ
              </span>
            </h1>
            <p className="mt-4 text-xl text-gray-400 max-w-2xl mx-auto mb-10 leading-relaxed">
              Nơi cung cấp các khóa học Triết học chuyên sâu và các tài khoản Premium bản quyền.
            </p>
            <div className="flex flex-col sm:flex-row justify-center gap-4">
              <button 
                onClick={() => handleScroll('khóa-học')}
                className="px-8 py-4 rounded-full bg-gradient-to-r from-cyan-600 to-blue-700 hover:from-cyan-500 hover:to-blue-600 text-white font-bold shadow-[0_0_20px_rgba(8,145,178,0.4)] transition-all transform hover:scale-105 hover:shadow-[0_0_30px_rgba(8,145,178,0.6)] flex items-center justify-center gap-2"
              >
                <BookOpen size={20} />
                Xem Khóa Học
              </button>
              <button 
                onClick={() => handleScroll('ứng-dung')}
                className="px-8 py-4 rounded-full border border-cyan-500/50 hover:bg-cyan-900/20 text-cyan-400 font-bold transition-all transform hover:scale-105 hover:border-cyan-400 flex items-center justify-center gap-2"
              >
                <Monitor size={20} />
                Xem Ứng Dụng
              </button>
            </div>
          </div>
        </RevealOnScroll>
      </section>

      {/* Courses Section */}
      <section id="khóa-học" className="relative z-10 py-20 bg-[#020617]/50">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <RevealOnScroll>
            <div className="text-center mb-16">
              <h2 className="text-3xl md:text-4xl font-bold text-white mb-4">Khóa Học Triết Học</h2>
              <div className="h-1 w-20 bg-gradient-to-r from-cyan-500 to-purple-500 mx-auto rounded-full"></div>
              <p className="mt-4 text-gray-400">Những bài học tinh hoa dành cho người đi tìm chân lý.</p>
            </div>
          </RevealOnScroll>

          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {COURSES.map((course, idx) => (
              <RevealOnScroll key={course.id} delay={idx * 100}>
                <div className="group relative bg-[#0F1623] border border-gray-800 rounded-2xl overflow-hidden hover:border-cyan-500/50 transition-all duration-300 hover:shadow-[0_0_30px_rgba(6,182,212,0.15)] flex flex-col h-full hover:-translate-y-2">
                  <div className="h-48 overflow-hidden relative">
                    <div className="absolute inset-0 bg-black/40 group-hover:bg-transparent transition-all z-10" />
                    <img src={course.image} alt={course.title} className="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700" />
                    <div className="absolute top-4 right-4 z-20 flex gap-2">
                      {course.tags.map(tag => (
                        <span key={tag} className="text-xs font-bold px-2 py-1 rounded bg-black/60 backdrop-blur text-cyan-300 border border-cyan-500/30">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>
                  <div className="p-6 flex-1 flex flex-col">
                    <h3 className="text-xl font-bold text-white mb-2 group-hover:text-cyan-400 transition-colors">{course.title}</h3>
                    <p className="text-gray-400 text-sm mb-4 line-clamp-2 flex-1">{course.description}</p>
                    <div className="flex items-baseline gap-2 mb-6">
                      <span className="text-2xl font-bold text-cyan-400">{course.price}</span>
                      <span className="text-sm text-gray-600 line-through">{course.originalPrice}</span>
                    </div>
                    <div className="mt-auto flex gap-3">
                      <button className="flex-1 py-2 rounded-lg bg-cyan-600/20 hover:bg-cyan-600/40 text-cyan-400 border border-cyan-500/50 font-medium transition-colors hover:shadow-[0_0_15px_rgba(34,211,238,0.3)]">
                        Mua Ngay
                      </button>
                      <a href={course.trialLink} className="flex items-center justify-center px-4 py-2 rounded-lg bg-gray-800 hover:bg-gray-700 text-gray-300 font-medium transition-colors" title="Học thử">
                        <ExternalLink size={18} />
                      </a>
                    </div>
                  </div>
                </div>
              </RevealOnScroll>
            ))}
          </div>
        </div>
      </section>

      {/* Apps / Accounts Section */}
      <section id="ứng-dung" className="relative z-10 py-20">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <RevealOnScroll>
            <div className="text-center mb-16">
              <h2 className="text-3xl md:text-4xl font-bold text-white mb-4">Tài Khoản & Ứng Dụng</h2>
              <div className="h-1 w-20 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto rounded-full"></div>
              <p className="mt-4 text-gray-400">Nâng cấp trải nghiệm số với chi phí tối ưu.</p>
            </div>
          </RevealOnScroll>

          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {ACCOUNTS.map((acc, idx) => (
              <RevealOnScroll key={acc.id} delay={idx * 100}>
                <div className={`relative bg-gradient-to-br from-[#111827] to-[#0B0F19] p-6 rounded-2xl border transition-all duration-300 group flex flex-col h-full hover:-translate-y-2 ${acc.isContact ? 'border-yellow-600/30 hover:border-yellow-500 hover:shadow-[0_0_20px_rgba(234,179,8,0.2)]' : 'border-gray-800 hover:border-purple-500/50 hover:shadow-[0_0_20px_rgba(168,85,247,0.2)]'}`}>
                  <div className="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                    {acc.icon}
                  </div>
                  <div className="mb-6 bg-gray-900/50 w-16 h-16 rounded-2xl flex items-center justify-center border border-gray-700 group-hover:border-purple-500/50 transition-colors">
                    {acc.icon}
                  </div>
                  <h3 className="text-lg font-bold text-white mb-2">{acc.title}</h3>
                  <p className="text-purple-400 text-xs font-medium mb-2 uppercase">{acc.platform}</p>
                  <p className="text-gray-400 text-sm mb-6 flex-1">{acc.description}</p>
                  <div className="flex items-center justify-between border-t border-gray-800 pt-4 mt-auto">
                    <span className={`text-lg font-bold ${acc.isContact ? 'text-yellow-400' : 'text-white'}`}>{acc.price}</span>
                    <button 
                      onClick={() => handleScroll('liên-hệ')}
                      className={`p-2 rounded-full text-white transition-all duration-300 transform hover:scale-110 ${acc.isContact ? 'bg-yellow-600 hover:bg-yellow-500 shadow-lg shadow-yellow-600/20' : 'bg-purple-600 hover:bg-purple-500 shadow-lg shadow-purple-600/20'}`}
                    >
                      {acc.isContact ? <Phone size={20} /> : <ShoppingCart size={20} />}
                    </button>
                  </div>
                </div>
              </RevealOnScroll>
            ))}
          </div>
        </div>
      </section>

      {/* Feedback Section */}
      <section id="feedback" className="relative z-10 py-20 bg-[#020617]/50 overflow-hidden">
         <div className="w-full">
           
           <RevealOnScroll>
             <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center mb-12">
                 <h2 className="text-3xl md:text-4xl font-bold text-white mb-4">Học Viên Nói Gì?</h2>
                 <div className="h-1 w-20 bg-gradient-to-r from-cyan-500 to-blue-500 mx-auto rounded-full"></div>
             </div>
           </RevealOnScroll>
           
           <RevealOnScroll delay={200}>
             {isLoadingReviews ? (
                <div className="flex justify-center mb-12">
                    <div className="animate-spin text-cyan-500"><Loader size={32}/></div>
                </div>
             ) : reviews.length === 0 ? (
                <div className="text-center text-gray-500 mb-20 italic">
                    Chưa có đánh giá nào. Hãy là người đầu tiên!
                </div>
             ) : (
                 <div className="space-y-8 mb-20 mask-linear-fade">
                     {renderMarqueeRow(firstRow, 'left', 40)}
                     {renderMarqueeRow(secondRow.length > 0 ? secondRow : firstRow, 'left', 45)}
                 </div>
             )}
           </RevealOnScroll>

           <RevealOnScroll delay={300}>
             <div className="max-w-3xl mx-auto px-4">
               <div className="bg-[#0F1623]/80 backdrop-blur-lg border border-cyan-900/30 rounded-3xl p-8 md:p-12 shadow-[0_0_50px_rgba(8,145,178,0.1)]">
                  <div className="text-center mb-10">
                    <h3 className="text-2xl font-bold text-white mb-4">Gửi Đánh Giá</h3>
                    <p className="text-gray-400">Ý kiến của bạn giúp chúng tôi hoàn thiện hơn mỗi ngày.</p>
                  </div>

                  {submitStatus === 'success' ? (
                    <div className="bg-green-500/10 border border-green-500/50 rounded-xl p-6 text-center animate-fade-in">
                      <div className="w-16 h-16 bg-green-500/20 text-green-400 rounded-full flex items-center justify-center mx-auto mb-4 animate-bounce">
                        <CheckCircle size={32} />
                      </div>
                      <h3 className="text-xl font-bold text-white mb-2">Đã gửi thành công!</h3>
                      <p className="text-gray-300">Cảm ơn đánh giá của bạn.</p>
                    </div>
                  ) : (
                    <form onSubmit={handleSubmit} className="space-y-6">
                      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                          <label className="block text-sm font-medium text-cyan-300 mb-2">Họ và Tên</label>
                          <input
                            type="text"
                            name="name"
                            required
                            value={formData.name}
                            onChange={handleInputChange}
                            className="w-full bg-[#050B14] border border-gray-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-cyan-500 focus:ring-1 focus:ring-cyan-500 transition-colors placeholder-gray-600"
                            placeholder="Nguyễn Văn A"
                          />
                        </div>
                        <div>
                          <label className="block text-sm font-medium text-cyan-300 mb-2">Email</label>
                          <input
                            type="email"
                            name="email"
                            required
                            value={formData.email}
                            onChange={handleInputChange}
                            className="w-full bg-[#050B14] border border-gray-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-cyan-500 focus:ring-1 focus:ring-cyan-500 transition-colors placeholder-gray-600"
                            placeholder="email@example.com"
                          />
                        </div>
                      </div>

                      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                          <div>
                              <label className="block text-sm font-medium text-cyan-300 mb-2">Mức độ hài lòng</label>
                              <div className="flex gap-2">
                                  {[1, 2, 3, 4, 5].map((star) => (
                                      <button
                                          key={star}
                                          type="button"
                                          onClick={() => handleRatingChange(star)}
                                          className="focus:outline-none transition-transform hover:scale-110"
                                      >
                                          <Star 
                                              size={28} 
                                              className={`${star <= formData.rating ? 'fill-yellow-400 text-yellow-400' : 'text-gray-600'}`}
                                          />
                                      </button>
                                  ))}
                              </div>
                          </div>
                          <div>
                              <label className="block text-sm font-medium text-cyan-300 mb-2">Bạn đánh giá về?</label>
                              <div className="flex gap-4">
                                  <button
                                      type="button"
                                      onClick={() => handleTypeChange('Mua khóa học')}
                                      className={`flex-1 py-2 px-4 rounded-lg border text-sm font-medium transition-colors ${
                                          formData.type === 'Mua khóa học' 
                                          ? 'bg-cyan-600/20 border-cyan-500 text-cyan-400' 
                                          : 'bg-[#050B14] border-gray-700 text-gray-400 hover:border-gray-500'
                                      }`}
                                  >
                                      Mua khóa học
                                  </button>
                                  <button
                                      type="button"
                                      onClick={() => handleTypeChange('Mua App')}
                                      className={`flex-1 py-2 px-4 rounded-lg border text-sm font-medium transition-colors ${
                                          formData.type === 'Mua App' 
                                          ? 'bg-purple-600/20 border-purple-500 text-purple-400' 
                                          : 'bg-[#050B14] border-gray-700 text-gray-400 hover:border-gray-500'
                                      }`}
                                  >
                                      Mua App
                                  </button>
                              </div>
                          </div>
                      </div>

                      <div>
                        <label className="block text-sm font-medium text-cyan-300 mb-2">Nội dung đánh giá</label>
                        <textarea
                          name="message"
                          required
                          rows="4"
                          value={formData.message}
                          onChange={handleInputChange}
                          className="w-full bg-[#050B14] border border-gray-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-cyan-500 focus:ring-1 focus:ring-cyan-500 transition-colors placeholder-gray-600"
                          placeholder="Hãy chia sẻ cảm nhận của bạn..."
                        ></textarea>
                      </div>
                      <button
                        type="submit"
                        disabled={submitStatus === 'sending'}
                        className="w-full bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-500 hover:to-blue-500 text-white font-bold py-4 rounded-xl shadow-lg transform hover:scale-[1.02] transition-all flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed"
                      >
                        {submitStatus === 'sending' ? (
                          <span className="animate-pulse">Đang gửi...</span>
                        ) : (
                          <>
                            <Send size={20} />
                            Gửi Đánh Giá
                          </>
                        )}
                      </button>
                    </form>
                  )}
               </div>
             </div>
           </RevealOnScroll>
         </div>
      </section>

      <section id="liên-hệ" className="relative z-10 py-24">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <RevealOnScroll>
              <h2 className="text-3xl md:text-4xl font-bold text-white mb-4">Kết Nối Với Chúng Tôi</h2>
              <div className="h-1 w-20 bg-gradient-to-r from-blue-500 to-cyan-500 mx-auto rounded-full mb-12"></div>
            </RevealOnScroll>
            
            <div className="flex flex-wrap justify-center gap-6">
              {SOCIAL_LINKS.map((social, idx) => (
                <RevealOnScroll key={social.name} delay={idx * 100}>
                  <a 
                    href={social.url}
                    target="_blank" 
                    rel="noopener noreferrer"
                    className={`group relative flex items-center gap-3 px-8 py-4 rounded-2xl bg-gradient-to-r ${social.color} hover:opacity-90 transition-all duration-300 transform hover:-translate-y-2 hover:shadow-[0_10px_30px_-10px_rgba(255,255,255,0.3)] overflow-hidden`}
                  >
                    <div className="absolute inset-0 bg-white/20 group-hover:translate-x-full transition-transform duration-500 skew-x-12 -ml-4 w-[120%]"></div>
                    <div className="relative z-10 text-white">
                      {social.icon}
                    </div>
                    <span className="relative z-10 font-bold text-white text-lg">{social.name}</span>
                  </a>
                </RevealOnScroll>
              ))}
            </div>
        </div>
      </section>

      <footer className="relative z-10 border-t border-gray-800 bg-[#020617] py-12">
        <div className="max-w-7xl mx-auto px-4 text-center">
          <div className="flex items-center justify-center mb-6">
             <div className="w-8 h-8 rounded-full bg-gradient-to-tr from-cyan-400 to-blue-600 flex items-center justify-center mr-2 animate-pulse">
                <Star size={16} className="text-white fill-current" />
              </div>
              <span className="font-bold text-xl uppercase text-white">AstroMind</span>
          </div>
          <p className="text-gray-500 text-sm mb-4">
            Lan tỏa tri thức - Kết nối giá trị. <br/>
            © 2024 AstroMind. All rights reserved.
          </p>
        </div>
      </footer>
      
      <style>{`
        @keyframes gradient-x {
          0%, 100% { background-position: 0% 50%; }
          50% { background-position: 100% 50%; }
        }
        .animate-gradient-x {
          background-size: 200% 200%;
          animation: gradient-x 3s ease infinite;
        }

        /* Marquee Animation */
        @keyframes marquee {
          0% { transform: translateX(0); }
          100% { transform: translateX(-50%); }
        }
        .animate-marquee {
          width: max-content;
          animation: marquee 30s linear infinite;
        }
        
        /* Float Animation */
        @keyframes float {
          0% { transform: translateY(0px); }
          50% { transform: translateY(-10px); }
          100% { transform: translateY(0px); }
        }
        .animate-float {
          animation: float 4s ease-in-out infinite;
        }

        /* Shooting Star Animation */
        .star-shooting {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          pointer-events: none;
          z-index: 0;
        }
        .star-shooting span {
          position: absolute;
          width: 4px;
          height: 4px;
          background: #fff;
          border-radius: 50%;
          box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.1), 0 0 0 8px rgba(255, 255, 255, 0.1), 0 0 20px rgba(255, 255, 255, 1);
          animation: shooting 3s linear infinite;
          opacity: 0;
        }
        .star-shooting span::before {
          content: '';
          position: absolute;
          top: 50%;
          transform: translateY(-50%);
          width: 300px;
          height: 1px;
          background: linear-gradient(90deg, #fff, transparent);
        }
        @keyframes shooting {
          0% {
            transform: rotate(315deg) translateX(0);
            opacity: 1;
          }
          70% {
            opacity: 1;
          }
          100% {
            transform: rotate(315deg) translateX(-1500px);
            opacity: 0;
          }
        }

        /* Fade Mask for Marquee edges */
        .mask-linear-fade {
          mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
          -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
        }
      `}</style>
    </div>
  );
}
